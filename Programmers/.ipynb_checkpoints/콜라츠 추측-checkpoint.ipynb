    "def solution(num):\n",
    "    cnt = 0\n",
    "    while num != 1:\n",
    "        cnt += 1\n",
    "        if num % 2:\n",
    "            num = num*3 + 1\n",
    "        else:num //= 2\n",
    "        \n",
    "        if cnt > 500:\n",
    "            return -1\n",
    "    return cnt"
   ]
