    "# \t29200 KB, 76 ms\n",
    "N = int(input())\n",
    "idx = 0\n",
    "ans = 0\n",
    "while N:\n",
    "    N, r = divmod(N, 2)\n",
    "\n",
    "    if r: ans += 3 ** idx\n",
    "    idx += 1\n",
    "print(ans)"
   ]
